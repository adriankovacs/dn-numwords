<div>
  <%= form_tag(:get_numwords) do -%>
    <%= text_field_tag :number, params[:number] -%>
    <%= submit_tag "Go, get numwords" -%>
  <% end -%>
</div>
<% if @result -%>
  <div>
    <%= "#{@result}" -%>
  </div>
<% end -%>
<% if params[:action] != "index" -%>
  <div>
    <%= link_to "back to index", :root -%>
  </div>
<% end -%>
